@{
    ViewData["Title"] = "Administración";
}

<div class="container mt-2 p-3 bg-body rounded-3 bg-opacity-10 box-shadow">
<!-- Content Wrapper -->
<div id="content-wrapper" class="d-flex flex-column">

    <!-- Main Content -->
    <div id="content">
        <!-- Begin Page Content -->
        <div class="container-fluid">

            <!-- Page Heading -->

                <h1 class="h3 mb-0 text-gray-800 text-center mb-4">Panel de Administración</h1>
