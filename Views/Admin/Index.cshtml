            <!-- Content Row -->
            <div class="row text-center text-md-start">

                <!-- Usuarios -->
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-primary bg-light bg-opacity-50 shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                        Usuarios
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">Total: @ViewData["CONTEOUSERS"]</div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800 py-3"><a class="btn btn-outline-primary" asp-controller="User" asp-action="List">Administrar Usuarios</a></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Recetas -->
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-success bg-light bg-opacity-50 shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                        Recetas
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">Total: @ViewData["CONTEORECETAS"]</div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800 py-3"><a class="btn btn-outline-success" asp-controller="Recetas" asp-action="List">Administrar Recetas</a></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Utensilios -->
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-danger bg-light bg-opacity-50 shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">
                                        Utensilios
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">Total: @ViewData["CONTEOUTENSILIOS"]</div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800 py-3"><a class="btn btn-outline-danger" asp-controller="Utensilio" asp-action="List">Administrar Utensilios</a></div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Ingredientes -->
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-light bg-light bg-opacity-50 shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-light text-uppercase mb-1">
                                        Ingredientes
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">Total: @ViewData["CONTEOINGREDIENTES"]</div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800 py-3"><a class="btn btn-outline-light" asp-controller="Ingrediente" asp-action="List">Administrar Ingredientes</a></div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

