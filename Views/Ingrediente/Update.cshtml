@model CupMetric.Models.Ingrediente

@{
    ViewData["Title"] = "Actualizar";
}
<div class="container text-center mt-2 p-3 bg-body rounded-3 bg-opacity-10 box-shadow">
    <a asp-action="List" class="link-dark">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8" />
        </svg> Volver
    </a>
    <h1 class="text-center">Actualizar Ingrediente</h1>
<hr />
<div class="row">
    <div class="col-md-4 mx-auto">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="IdIngrediente" class="form-control" type="hidden" />
            </div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Densidad" class="control-label"></label>
                <input type="text" pattern="[^.]*" name="Densidad" class="form-control" value="@Model.Densidad"/>
                <span asp-validation-for="Densidad" class="text-danger"></span>
            </div>
@*             <div class="form-group">
                <label asp-for="Imagen" class="control-label"></label>
                <input asp-for="Imagen" class="form-control" />
                <span asp-validation-for="Imagen" class="text-danger"></span>
            </div> *@
            <div class="form-group">
                <label asp-for="Almacenamiento" class="control-label"></label>
                <input asp-for="Almacenamiento" class="form-control" />
                <span asp-validation-for="Almacenamiento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sustitutivo" class="control-label"></label>
                <input asp-for="Sustitutivo" class="form-control" />
                <span asp-validation-for="Sustitutivo" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Medible" /> @Html.DisplayNameFor(model => model.Medible)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Enviar" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
