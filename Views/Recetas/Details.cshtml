@model CupMetric.Models.Receta

@{
    ViewData["Title"] = "Detalles";
}

<div class="container mt-2 p-3 bg-body rounded-3 bg-opacity-10 box-shadow">
    <a asp-action="List" class="link-dark">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8" />
        </svg> Volver
    </a>
    <h1 class="text-center">Detalle de @Model.Nombre</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdReceta)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdReceta)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Instrucciones)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Instrucciones)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Imagen)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Imagen)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdCategoria)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdCategoria)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TiempoPreparacion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TiempoPreparacion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Visitas)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Visitas)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MediaValoraciones)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MediaValoraciones)
        </dd>
    </dl>
</div>
</div>
