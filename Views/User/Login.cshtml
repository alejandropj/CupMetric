<!-- Section: Design Block -->
<section class="text-center text-lg-start">
  <style>
    .cascading-right {
      margin-right: -50px;
    }

/*     media (max-width: 991.98px) {
      .cascading-right {
        margin-right: 0;
      } */
    }
  </style>

  <!-- Jumbotron -->
  <div class="container py-4">
    <div class="row g-0 align-items-center">
      <div class="col-lg-6 mb-5 mb-lg-0">
        <div class="card cascading-right" style="
            background: hsla(0, 0%, 100%, 0.55);
            backdrop-filter: blur(30px);
            ">
          <div class="card-body p-5 shadow-5 text-center">
            <h2 class="fw-bold mb-5">Inicia sesión</h2>
            <form method="post">

              <!-- Email input -->
              <div class="form-outline mb-4" data-mdb-input-init>
                <input type="email" id="formEmail" name="email" class="form-control" placeholder="Introduce correo" />
                <label class="form-label" for="typeEmail">Correo</label>
              </div>

              <!-- Password input -->
              <div class="form-outline mb-4" data-mdb-input-init>
                <input type="text" id="formPassword" name="password" class="form-control" placeholder="Introduce contraseña" />
                <label class="form-label" for="typePassword">Contraseña</label>
              </div>

              <!-- Submit button -->
              <button type="submit" class="btn btn-primary btn-block mb-4">
                Enviar
              </button>
                            <h3 class="text-danger">@ViewData["MENSAJE"]</h3>

            </form>
            <a asp-action="Register">Registrate</a>
          </div>
        </div>
      </div>

      <div class="col-lg-6 mb-5 mb-lg-0">
        <img src="https://mdbootstrap.com/img/new/ecommerce/vertical/004.jpg" class="w-100 rounded-4 shadow-4"
          alt="" />
      </div>
    </div>
  </div>

  <!-- Jumbotron -->


